          },
          "notes": {
            "anyOf": [
              { "type": "string" },
              { "type": "null" }
            ],
            "description": "Additional clarifications, ambiguities, or extraction notes relevant to the work. Use null if none."
          },
          "short_title": {
            "anyOf": [
              { "type": "string" },
              { "type": "null" }
            ],
            "description": "Concise reference form (≤ 100 characters). Use null if no clear short form exists."
          },
          "genre": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "Cookbook",
                  "Household Manual",
                  "Agricultural Manual",
                  "Dietetic/Medical Treatise",
                  "Banquet/Stewardship Treatise",
                  "Map/Guide",
                  "Bibliography",
                  "Culinary History",
                  "Magazine/Periodical",
                  "Other",
                  "Unknown"
                ]
              },
              { "type": "null" }
            ],
