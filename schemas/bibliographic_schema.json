{
  "name": "BibliographicEntries",
  "schema_version": "2.8",
  "type": "json_schema",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "entries": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "full_title": {
              "type": "string",
              "description": "Complete official title in plain text, preserving archaic spelling."
            },
            "short_title": {
              "type": "string",
              "description": "A concise title or reference name in plain text. Example: 'Art of Cooking'."
            },
            "authors": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "Name of an author/editor/translator/etc.; use 'Anonymous' if absent."
              },
              "description": "An array of names corresponding to contributors. Example: ['Fran√ßois Pierre de la Varenne', 'Pelligrino Artusi']."
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "Author",
                  "Editor",
                  "Translator",
                  "Publisher",
                  "Printer",
                  "Unknown",
                  "Other"
                ],
                "description": "Role for each corresponding entry in 'authors'."
              },
              "description": "Array of roles, aligned with 'authors'."
            },
            "culinary_focus": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "General",
                  "Baking and Pastry",
                  "Brewing and Distilling",
                  "Confectionery and Sweets",
                  "Preserving and Pickling",
                  "Medicinal and Health",
                  "Vegetarian and Vegan",
                  "Regional and Ethnic Cuisine",
                  "Dietary and Nutrition",
                  "Beverages and Drinks",
                  "Carving and Presentation",
                  "Wine and Viticulture",
                  "Meat and Poultry",
                  "Fish and Seafood",
                  "Herbs and Spices",
                  "Sauces and Condiments",
                  "Culinary Techniques",
                  "Culinary History",
                  "Culinary Arts Education",
                  "Agriculture and Viticulture",
                  "Unknown",
                  "Other"
                ],
                "description": "Culinary focus areas. Example: ['Baking and Pastry', 'Culinary Techniques']."
              },
              "description": "An array indicating the specific culinary areas the book focuses on."
            },
            "format": {
              "anyOf": [
                {
                  "type": "string",
                  "enum": [
                    "Folio",
                    "Quarto",
                    "Octavo",
                    "Duodecimo",
                    "Pocket-Sized",
                    "Miniature",
                    "Unknown",
                    "Other"
                  ]
                },
                { "type": "null" }
              ],
              "description": "Physical format of the book. Use a listed value, or null if not provided."
            },
            "pages": {
              "type": ["integer", "null"],
              "description": "Number of pages/leaf count, or null if unknown."
            },
            "edition_info": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "year": {
                    "type": ["integer", "null"],
                    "description": "The year of publication. Use an integer or `null` if unknown. Example: 1751."
                  },
                  "edition_number": {
                    "type": ["integer", "null"],
                    "description": "Edition number (1,2,3...) or null if unknown."
                  },
                  "location": {
                    "type": "object",
                    "properties": {
                      "country": {
                        "type": ["string", "null"],
                        "description": "Country of publication, modern english. Use a string or `null` if unknown. Example: 'Italy'."
                      },
                      "city": {
                        "type": ["string", "null"],
                        "description": "City of publication, modern english. Use a string or `null` if unknown. Example: 'Rome'."
                      }
                    },
                    "required": ["country", "city"],
                    "additionalProperties": false,
                    "description": "Geographic publication location."
                  },
                  "short_note": {
                    "type": ["string", "null"],
                    "description": "A brief note of any important information. Example: 'Second edition with added chapters.'"
                  },
                  "edition_category": {
                    "anyOf": [
                      {
                        "type": "string",
                        "enum": [
                          "Original",
                          "Reprint",
                          "Translation",
                          "Plagiarism",
                          "Modified Edition",
                          "Compilation",
                          "Facsimile",
                          "Critical Edition",
                          "Unknown",
                          "Other"
                        ]
                      },
                      { "type": "null" }
                    ],
                    "description": "The category of the edition. Use a listed value, or null if the source omits it. Example: 'Original'."
                  },
                  "language": {
                    "anyOf": [
                      {
                        "type": "string",
                        "enum": [
                          "German",
                          "Spanish",
                          "English",
                          "French",
                          "Italian",
                          "Dutch",
                          "Latin",
                          "Unknown",
                          "Other"
                        ]
                      },
                      { "type": "null" }
                    ],
                    "description": "Language of this edition. Use a listed value, or null if not stated. Example: 'Italian'."
                  },
                  "original_language": {
                    "anyOf": [
                      {
                        "type": "string",
                        "enum": [
                          "German",
                          "Spanish",
                          "English",
                          "French",
                          "Italian",
                          "Dutch",
                          "Latin",
                          "Unknown",
                          "Other"
                        ]
                      },
                      { "type": "null" }
                    ],
                    "description": "The original language of the work if it has been translated. Use a listed value, or null if not specified. Example: 'English'."
                  },
                  "translated_from": {
                    "anyOf": [
                      {
                        "type": "string",
                        "enum": [
                          "German",
                          "Spanish",
                          "English",
                          "French",
                          "Italian",
                          "Dutch",
                          "Latin",
                          "Unknown",
                          "Other"
                        ]
                      },
                      { "type": "null" }
                    ],
                    "description": "The language from which the work was translated. Use a listed value, or null if not applicable. Example: 'English'."
                  }
                },
                "required": [
                  "year",
                  "edition_number",
                  "location",
                  "short_note",
                  "edition_category",
                  "language",
                  "original_language",
                  "translated_from"
                ],
                "additionalProperties": false
              },
              "description": "Detailed information about each edition."
            }
          },
          "required": [
            "full_title",
            "short_title",
            "authors",
            "roles",
            "culinary_focus",
            "format",
            "pages",
            "edition_info"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": ["entries"],
    "additionalProperties": false
  }
}